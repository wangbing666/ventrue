/* pages/greatVideo/videList/videoList.wxss */
image{
  width: 100%;
  height: 360rpx;
}
.flex-wrp{
  width: 100%;
  margin-bottom: 40rpx;
}
.flex-item{
  position: relative;
}
.video_list{
  padding: 20rpx;
  font-size: 32rpx;
  color: #666;
}
.video_list_title{
  color: #000;
  font-size: 36rpx;
}
.video_list_detail{
  font-size: 28rpx;
  width: 100%;
  text-overflow:ellipsis;
  white-space: nowrap;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  color: #999;
  max-height: 100rpx;
  overflow: hidden;
  padding: 15rpx 0;
}
.video_list_modal{
  width: 100%;
  height: 360rpx;
  left: 0;
  top:0;
  position: absolute;
  z-index: 1;
}