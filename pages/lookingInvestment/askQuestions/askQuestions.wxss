/* pages/lookingInvestment/askQuestions/askQuestions.wxss */
@import "../../../common/lib/weui.wxss";
.askQuestions{
  font-size: 32rpx;
  color: #333;
}
.askQuestions_header{
  background: #fff;
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.askQuestions_content{
  margin: 20rpx 0;
  background: #fff;
  padding: 20rpx;
}
.askQuestions_content textarea{
  min-height: 200rpx;
  width: 100%;
  font-size: 28rpx;
}
.askQuestions_private{
  height: 80rpx;
  padding: 20rpx;
  background: #fff;
}
.private_prompt text{
  color: red;
}
.private_switch{
  flex: 1;
  text-align: right;
}
.private_switch text{
  color: red;
}
.askQuestions_upload{
  background: #fff;
  padding: 20rpx;
  margin: 20rpx 0;
}
.upload_img image{
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
}
.upload_bp{
  flex: 1;
  padding: 20rpx;
}
.upload_bp image{
  width: 100%;
  height: 70rpx;
}
.upload_bp view{
  color: #999;
  font-size: 28rpx;
  text-align: center;
}
.askQuestions_img{
  padding: 20rpx;
  background: #fff;
}
.pay_askQuestions{
  padding: 20rpx;
}