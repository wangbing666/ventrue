/* pages/lookingInvestment/audit/audit.wxss */
.audit{
  font-size: 28rpx;
}
.audit_main{
  background: #fff;
  color: #999;
  padding: 20rpx;
}
.audit_header{
  font-size: 28rpx;
  color: #333;
  padding-bottom: 10rpx;
}
.audit_header image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 30rpx;
}
.audit_header text{
  color: #999;
}
.price{
  color: red;
  flex: 1;
  text-align: right;
}
.audit_content image{
  width: 100rpx;
  height: 100rpx;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
}
.audit_count{
  justify-content: flex-end;
}
.audit_count view{
  background: #ddd;
  border: 1px solid #ccc;
  color: #666;
  padding: 5rpx 10rpx;
}
.audit_bth{
  background: #fff;
  margin: 20rpx 0;
  padding: 20rpx;
}
.audit_bth button{
  margin: 20rpx 0;
}
/* 语音列表 */
.audit_list{
  margin: 10rpx 0;
  background: #fff;
  font-size: 28rpx;
  color: #999;
}
.audit_list_image{
  padding: 20rpx;
  position: relative;
}
.audit_list_image text{
  padding-left: 10rpx;
}
.list_image_avatar{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50rpx;
  margin-bottom: 40rpx;
}
.list_image_audio{
  width: 300rpx;
  height: 80rpx;
  margin: 20rpx 30rpx;
}
.audit_list_time{
  position: absolute;
  left: 30rpx;
  bottom: 0;
  font-size: 24rpx;
}
.arrow{
  font-size: 0;  
  line-height: 0;
  width: 0; 
  border-width: 15rpx;  
  border-color: #ccc; 
  border-top-width: 0;  
  border-style: dashed;  
  border-bottom-style: solid;  
  border-left-color: transparent;  
  border-right-color: transparent;
  margin: 0 auto;
}
.audit_list_main{
  border-top: 1rpx solid #ccc;
}
.navigator-text{
  font-size: 36rpx;
  color: #333;
  padding: 20rpx 0 0 20rpx;
}
.navigator_com{
  padding:0 0 20rpx 20rpx;
}
.navigator-text text{
  font-size: 24rpx;
  color: #999;
  padding-left: 20rpx;
}