/* pages/my/questionHome/meet/meet.wxss */
.appoint{
  font-size: 32rpx;
  color: #999;
}
.appoint_header{
  background: #fff;
  font-size: 32rpx;
  color: #666;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 2rpx solid #ddd;
}
.appoint_header text{
  float: left;
  font-size: 50rpx;
}
.progress{
  position: relative;
   background: #fff;
   padding: 20rpx;
}
.progress>view{
  width: 20%;
  font-size: 28rpx;
  text-align: center;
}
.progress .dot{
  width: 20rpx;
  height: 20rpx;
  background: #ccc;
  border-radius: 20rpx;
  margin: 0 auto;
}
.appoint_line{
  width: 100% !important;
  height: 2rpx;
  background: #ccc;
  position: absolute;
  left: 0;
  top: 70%;
}
.appoint_bp{
  text-align: center;
  color: #333;
  border-top: 2rpx solid #ccc;
  background: #eee;
  border-bottom: 2rpx dotted #ccc;
}
.appoint_bp view{
  padding-top: 20rpx;
}
.active{
  background: #f90 !important;
}
.active_color{
  color: #f90 !important;
}
.question,.introduce_myself, .opposite_BP{
  background: #fff;
  min-height: 100rpx;
  padding: 10rpx 30rpx;
  margin-top: 20rpx;
}
.question_content, .introduce_myself_content{
  color: #999;
  font-size: 28rpx;
}
.opposite_BP_image{
  margin: 20rpx auto;
  width: 200rpx;
  text-align: center;
}
.opposite_BP_image image{
  width: 200rpx;
  height: 200rpx;
}
.meet_btn{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}
.meet_btn view{
    justify-content: flex-end;
    overflow: hidden;
}
.meet_btn text{
  float: right;
  background: #ccc;
  padding: 10rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}